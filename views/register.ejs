
    <%- include('layout/headerPublic') %>
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex align-items-center justify-content-center h-100">
                    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1 bg-white bg-opacity-75">
                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">PENDAFTARAN</p>

                        <form class="mx-1 mx-md-4" action="/register" method="POST">
                            <% if (result) { %>
                                <div class="d-flex flex-row align-items-center mb-4">
                                    <span id="error-msg" style="color: red;">
                                        <%= result %>
                                    </span>
                                </div>
                                <% } %>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="username" name="username"
                                                class="form-control" placeholder="Masukan Username" minlength="6" required/>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="text" id="name" name="name"
                                                class="form-control" placeholder="Masukan Nama Lengkap" minlength="10" required/>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="email" id="email" name="email" class="form-control"
                                                placeholder="Masukan Email" minlength="8" required/>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input type="password" id="password" name="password"
                                                class="form-control" placeholder="Masukan Kata Sandi" minlength="6" required/>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <span id="error-msg" style="color: red;"></span>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-block mb-4"
                                            onclick="return validateForm()">Daftar</button>
                                    </div>

                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script>
        function validateForm() {
            const password = document.forms[0].elements.password.value;
            const username = document.forms[0].elements.username.value;
            const errorMsg = document.getElementById('error-msg');

            if (!password || !username) {
                errorMsg.textContent = 'Harap isi seluruh form';
                return false;
            } else {
                errorMsg.textContent = '';
                return true;
            }
        }
    </script>

    <%- include('layout/footer') %>